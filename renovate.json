{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch",
      "groupName": "patch",
      "commitMessage": "Update {{depName}} from {{currentVersion}} to {{newVersion}}"
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": false,
      "commitMessage": "Update {{depName}} from {{currentVersion}} to {{newVersion}}"
    }
  ]
}
